    },
    {
      "name": "develop",
      "hidden": true,
      "cacheVariables": {
        "BUILD_SHARED_LIBS":                { "type": "BOOL", "value": "ON"},
        "IVW_CFG_CMAKE_DEBUG":              { "type": "BOOL", "value": "ON"},
        "IVW_CFG_PROFILING":                { "type": "BOOL", "value": "ON"},
